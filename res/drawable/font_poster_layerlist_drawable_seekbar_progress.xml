<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <size android:height="2.0dip" />
            <solid android:color="@color/font_theme_default_summary_text_color" />
            <corners android:radius="1.5dip" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <size android:height="2.0dip" />
                <solid android:color="@color/font_theme_poster_accent_color" />
                <corners android:radius="1.5dip" />
            </shape>
        </clip>
    </item>
</layer-list>